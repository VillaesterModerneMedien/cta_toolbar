<?xml version="1.0" encoding="utf-8"?>
    <extension type="module" client="site" method="upgrade">
        <name>CTA Toolbar</name>
        <author>Mario Hewera</author>
        <creationDate>September 2022</creationDate>
        <copyright>(C) 2022 Mario Hewera</copyright>
        <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
        <authorEmail>mh@villaester.de</authorEmail>
        <authorUrl>www.villaester.de</authorUrl>
        <version>1.0.0</version>
        <description>Call to action Toolbar</description>
        <namespace path="src">Joomla\Module\CTAToolbar</namespace>
        <files>
            <filename module="mod_cta_toolbar">mod_cta_toolbar.php</filename>
            <filename>mod_cta_toolbar.xml</filename>
            <filename>index.html</filename>
            <folder>src</folder>
            <folder>layouts</folder>
            <folder>tmpl</folder>
            <folder>assets</folder>
        </files>
  <!--      <languages>
            <language tag="en-GB">language/en-GB/mod_feed.ini</language>
            <language tag="en-GB">language/en-GB/mod_feed.sys.ini</language>
        </languages>
        <help key="Site_Modules:_Feed_Display" />
        -->
        <config>
            <fields name="params">
                <fieldset name="icons" label="Icons" class="ctaIconsContainer"
                addfieldprefix="Joomla\Module\CTAToolbar\Site\Field"
                >
                    <field name="Hinweis"
                           type="note"
                           class="alert alert-info"
                           label="Hinweis"
                           description="Wenn bei den Farben keine Auswahl getroffen wird, wird die Farbe aus den Einstellungen übernommen"
                    />
                    <field name="cta_modal"
                           type="Ctamodal"
                           hiddenlabel="true"
                    />
                    <field
                            name="subitems"
                            type="subform"
                            label=""
                            description="CTA Icons"
                            multiple="true"
                            min="1"
                            max="10"
                    >
                      <form>
                          <field
                            name="label"
                            type="text"
                            label="Beschriftung"
                            description=""
                          />
                          <field
                            name="textColor"
                            type="color"
                            format="rgba"
                            label="Item Textfarbe"
                            description="" />
                          <field
                            name="textHoverColor"
                            type="color"
                            format="rgba"
                            label="Item Hover-Textfarbe"
                            description="" />
                          <field
                            name="textBackgroundColor"
                            type="color"
                            format="rgba"
                            label="Item  Hintergrundfarbe"
                            description="" />
                          <field
                            name="textHoverBackgroundColor"
                            type="color"
                            format="rgba"
                            label="Item  Hover-Hintergrundfarbe"
                            description="" />
                          <field
                            name="icon"
                            type="Icon"
                            label="Icon"
                            description=""
                            default=""
                          />
                          <field
                            name="url"
                            type="text"
                            label="URL"
                            description=""
                          />
                          <field
                            name="target"
                            default="_self"
                            type="radio"
                            label="Ziel"
                            description=""
                          >
                            <option value="_self">Gleicher Tab</option>
                            <option value="_blank">Neuer Tab</option>
                          </field>
                        </form>
                    </field>
                </fieldset>
                    <fieldset name="Einstellungen" label="Einstellungen">
                        <fieldset name="toolbarsetting" label="Toolbar">
                            <field
                              name="toolbarPosition"
                              default="top"
                              type="radio"
                              label="Toolbarposition"
                              class="btn-group"
                            >
                              <option value="top">Oben</option>
                              <option value="bottom">Unten</option>
                              <option value="left">Links</option>
                              <option value="right">Rechts</option>
                            </field>
                            <field
                              name="boxAlign"
                              default="start"
                              type="radio"
                              label="Ausrichtung Inhalt"
                              class="btn-group"
                            >
                              <option value="start">Anfang</option>
                              <option value="center">Mitte</option>
                              <option value="end">Ende</option>
                            </field>
                            <field
                              name="hideable"
                              default="visible"
                              type="radio"
                              label="Ausblendbar?"
                              class="btn-group"
                            >
                                <option value="hideable">Ja</option>
                                <option value="visible">Nein</option>
                            </field>
                            <field
                              name="enableMobile"
                              default="false"
                              type="radio"
                              label="Alternative Ausrichtung für kleinen Viewport?"
                              class="btn-group btn-group-yesno"
                            >
                                <option value="true">JYes</option>
                                <option value="false">JNo</option>
                            </field>
                            <field
                                    name="breakpoint"
                                    default="960px"
                                    type="text"
                                    label="Breakpoint(width)"
                                    showon="enableMobile:true"
                            />
                            <field
                                    name="toolbarPositionMobile"
                                    default="top"
                                    type="radio"
                                    label="Toolbarposition für kleinen Viewport"
                                    showon="enableMobile:true"
                                    class="btn-group"
                            >
                                <option value="top">Oben</option>
                                <option value="bottom">Unten</option>
                                <option value="left">Links</option>
                                <option value="right">Rechts</option>
                            </field>
                            <field
                                    name="iconSize"
                                    default="30px"
                                    type="text"
                                    label="Icon-Größe"
                                    description=""
                            />
                            <field
                                    name="fontSize"
                                    default="12px"
                                    type="text"
                                    label="Text-Größe"
                                    description=""
                            />
                            <field
                                    name="animationStyle"
                                    default="single"
                                    type="radio"
                                    label="Animationsart"
                                    class="btn-group"
                            >
                                <option value="single">Items einzeln animieren</option>
                                <option value="group">Items als Gruppe animieren</option>
                            </field>
                            <field
                                    name="groupBackgroundColor"
                                    type="color"
                                    format="rgba"
                                    label="Hintergrund-Farbe"
                                    description=""
                                    showon="animationStyle:group"
                            />
                        </fieldset>
                        <fieldset name="globalColors" label="Globale Farbeinstellungen">
                            <field
                                    type="note"
                                    class="alert alert-info"
                                    label="Hinweis"
                                    description="Hier können die Globalen Farbeinstellungen vorgenommen werden. Diese gelten als default, solange kein anderer Wert zugewiesen wird"
                            />
                            <field
                                    name="globalTextColor"
                                    type="color"
                                    format="rgba"
                                    label="Item Textfarbe"
                                    description="" />
                            <field
                                    name="globalTextHoverColor"
                                    type="color"
                                    format="rgba"
                                    label="Item Hover-Textfarbe"
                                    description="" />
                            <field
                                    name="globalTextBackgroundColor"
                                    type="color"
                                    format="rgba"
                                    label="Item  Hintergrundfarbe"
                                    description="" />
                            <field
                                    name="globalTextHoverBackgroundColor"
                                    type="color"
                                    format="rgba"
                                    label="Item  Hover-Hintergrundfarbe"
                                    description="" />
                        </fieldset>
                    </fieldset>
                <fieldset name="advanced">
                    <field
                            name="layout"
                            type="modulelayout"
                            label="JFIELD_ALT_LAYOUT_LABEL"
                            class="form-select"
                            validate="moduleLayout"
                    />

                    <field
                            name="moduleclass_sfx"
                            type="textarea"
                            label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                            rows="3"
                            validate="CssIdentifier"
                    />

                    <field
                            name="cache"
                            type="list"
                            label="COM_MODULES_FIELD_CACHING_LABEL"
                            default="1"
                            filter="integer"
                            validate="options"
                    >
                        <option value="1">JGLOBAL_USE_GLOBAL</option>
                        <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                    </field>

                    <field
                            name="cache_time"
                            type="number"
                            label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
                            default="900"
                            filter="integer"
                    />
                </fieldset>
            </fields>
        </config>
    </extension>
